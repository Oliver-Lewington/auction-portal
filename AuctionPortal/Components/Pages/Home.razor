@page "/"

<PageTitle>Home</PageTitle>

<MudGrid>
    <MudItem md="6" xs="12">
        <MudContainer Class="pt-5">
            <MudText Typo="Typo.h4">Join the Future and sell your assets the new way.</MudText>
            <MudText Class="pt-10" Typo="Typo.body2">Auction website for the Million Maker Gala</MudText>
           
            <MudTextField @bind-Value="Search" Label="Search" Variant="Variant.Outlined" Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Search" AdornmentColor="Color.Secondary" />
        </MudContainer>
    </MudItem>
    <MudItem md="6" xs="12">
        <MudImage style="width:100%;" Src="https://placehold.co/600x1000"></MudImage>
    </MudItem>
</MudGrid>

@code{
    public string Search { get; set;}

    public bool HasSearchChanged {get; set;} = false;


    public void OnSearchChanged(string value)
    {
        Search = value;
        HasSearchChanged = true;
    }
}